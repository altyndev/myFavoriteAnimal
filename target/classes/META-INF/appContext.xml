<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:property-placeholder location="META-INF/application.properties"/>

    <bean id="person" class="peaksoft.models.Person">
        <property name="animal" ref="animal"/>
        <property name="name" value="${person.name}"/>
        <property name="age" value="${person.age}"/>
    </bean>

    <bean id="animal" class="peaksoft.models.Tiger">
        <property name="name" value="${tiger.name}"/>
        <property name="color" value="${tiger.color}"/>
        <property name="breed" value="${tiger.breed}"/>
    </bean>

    <bean id="friend" class="peaksoft.models.Person">
        <property name="animal" ref="animal1"/>
        <property name="name" value="${friend.name}"/>
        <property name="age" value="${friend.age}"/>
    </bean>

    <bean id="animal1" class="peaksoft.models.Tiger">
        <property name="name" value="${tiger1.name}"/>
        <property name="color" value="${tiger1.color}"/>
        <property name="breed" value="${tiger1.breed}"/>
    </bean>


</beans>